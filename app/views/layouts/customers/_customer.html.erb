<div class="card">
  <% if customer.image.present? %>
    <%= image_tag customer.image%>
  <% end %>
  <div class="card-body">
    <% if showlink %>
      <h5 class="card-title"><%= link_to customer.full_name, customer %></h5>
    <% end %>

    <p class="card-text"><%= customer.phone_number %></p>
    <p class="card-text"><%= cutomer.email %></p>
  </div>
</div>