<!DOCTYPE html>
<html>
  <head>
    <title>CustomerRelationManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_page?(customers_url) %>
        <h2>All Customers</h2>
      <% elsif current_page?(missing_email_url) %>
        <h2>Customers Missing Email</h2>
      <% else %>
        <h2>Customers Alphabetically</h2>
      <% end %>
    </div>

    <div class="container">
      <ul class="nav nav-tabs nav-fill justify-content-center pb-2 pt-4">
        <li class="nav-item"><%= link_to "Customers", customers_url %></li>
        <li class="nav-item"><%= link_to "Customers Missing Email", missing_email_url %></li>
        <li class="nav-item"><%= link_to "Customers Alphabetically", alphabetized_url %></li>
      </ul>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
